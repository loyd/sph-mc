  "private": true,

  "dependencies": {
    "dat-gui": "^0.5.0",
    "gl-matrix": "^2.3.1",
    "stats.js": "^1.0.0"
  },

  "devDependencies": {
    "browserify": "^11.0.1",
    "watchify": "^3.3.1",
    "babelify": "^6.3.0",
    "browserify-shader": "^0.1.0",
    "browser-sync": "^2.9.3"
  },

  "browserify": {
    "transform": [
      ["babelify", {"loose": "all"}],
      ["browserify-shader", {"parameterize": true}]
    ]
  },

  "scripts": {
    "build": "browserify src -d -o bundle.js",
    "watch": "watchify src -d -o bundle.js",
    "live": "browser-sync start --files 'index.html, bundle.js' --server",
    "clean": "rm -f bundle.js"
  }
}
