  "license": "MIT",
  "private": true,

  "devDependencies": {
    "browserify": "^11.0.1",
    "watchify": "^3.3.1",
    "babelify": "^6.3.0",
    "browserify-shader": "^0.1.0"
  },

  "browserify": {
    "transform": [
      ["babelify", {"loose": "all"}],
      ["browserify-shader", {"parameterize": true}]
    ]
  },

  "scripts": {
    "build": "browserify src -d -o bundle.js",
    "watch": "watchify src -d -o bundle.js",
    "clean": "rm -f bundle.js"
  }
}
